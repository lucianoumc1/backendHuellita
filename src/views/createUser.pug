doctype html
html(lang="es")
  head
    title Crear Usuario
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    .container.mt-5
      h1.mb-4 Crear Nuevo Usuario
      
      form(method="POST", action="/usuarios/crear")
        .mb-3
          label.form-label(for="nombre") Nombre
          input.form-control(type="text", name="nombre", required)
        
        .mb-3
          label.form-label(for="apellido") Apellido
          input.form-control(type="text", name="apellido", required)
        
        .mb-3
          label.form-label(for="email") Email
          input.form-control(type="email", name="email", required)
        
        .mb-3
          label.form-label(for="password") Contrase√±a
          input.form-control(type="password", name="password", required, minlength="8")
        
        .mb-3
          label.form-label(for="rol") Rol
          select.form-select(name="rol")
            option(value="user") Usuario
            option(value="admin") Administrador
        
        button.btn.btn-primary(type="submit") Crear Usuario